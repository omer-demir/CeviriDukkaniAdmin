@model Tangent.CeviriDukkani.Domain.Dto.Common.CareerItemDto


@{
    ViewBag.Title = "title";
}

<style>
    .txt-align-center {
        text-align: center;
    }
</style>


<section class="content">
    <div class="content-wrap">
        <div class="row">
            <div class="col-md-12">
                <h1 class="txt-align-center" style="color: #00d4d7">Bizimle çalışmak keyif vericidir!</h1>
            </div>
            <div class="col-md-12">
                
            </div>
        </div>
    </div>
</section>

<div class="clear"></div>
<h1 class="ortala" style="color: #00d4d7">Bizimle çalışmak keyif vericidir!</h1>
<div class="ortala">
    <div class="uyelikformu-baslik">
        <div style="clear: both"></div>
        @Model.Title
        Detayları
        <div class="steps">
            <div style="clear: both"></div>
            <span class="ac-step"><a href="#">İş Detayları</a></span><div style="clear: both"></div>
        </div>
        <div style="clear: both"></div>
    </div>

    <div class="uyelikformu">
        <div style="clear: both"></div>
        <table border="0" cellspacing="0" cellpadding="5">
            <tr>
                <td width="100" style="font-weight:bold">İş Ünvanı: </td>
                <td width="549">
                    @Model.Title
                </td>
            </tr>
            <tr>
                <td width="100" style="font-weight:bold">Lokasyon: </td>
                <td>
                    @Model.Location
                </td>
            </tr>
            <tr>
                <td width="100" style="font-weight:bold">Alınacak Kişi:</td>
                <td>
                    @Model.PersonCount
                </td>
            </tr>
            <tr>
                <td width="100" style="font-weight:bold;vertical-align:top">İş Detayları:</td>
                <td>
                    @Model.Detail
                </td>
            </tr>
            <tr>
                <td width="100">&nbsp;</td>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td width="100" style="font-weight:bold">&nbsp;</td>
                <td align="left">
                    <button id="btnNext" class="buton2" style="margin-top: 1px; float:right; cursor: pointer" onclick="btnNext_Click">Başvur »</button>
                </td>
            </tr>
        </table>
        <div style="clear: both"></div>
    </div>
</div>


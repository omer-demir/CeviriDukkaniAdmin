@using Resources;
@{
    ViewBag.Title = CDResource.OrderDetailList;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section breadcrumbs{
    <div id="breadcrumbs-wrapper">
        <!-- Search for small screen -->
        <div class="header-search-wrapper grey hide-on-large-only">
            <i class="mdi-action-search active"></i>
            <input type="text" name="Search" class="header-search-input z-depth-2" placeholder="Explore Materialize">
        </div>
        <div class="container">
            <div class="row">
                <div class="col s12 m12 l12">
                    <h5 class="breadcrumbs-title">@CDResource.OrderDetailList</h5>
                    <ol class="breadcrumbs">
                        <li>
                            <a href="/Admin/Home">@CDResource.Anasayfa</a>
                        </li>
                        <li class="active">@CDResource.OrderDetailList</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
}

<div class="section">
    <p class="caption">@CDResource.OrderDetailList @CDResource.Goruntulenmektedir</p>
    <div class="divider"></div>
    <div class="section">
        <div class="row">
            <div class="col s12 m12 l12">
                <input type="hidden" value="@ViewBag.OrderId" id="orderId" />
                <div id="orderDetailListGrid"></div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script data-main="/Areas/Admin/Scripts/app/page-scripts/order/list.orderdetails.editor.page.js" src="~/Scripts/require.js"></script>
}

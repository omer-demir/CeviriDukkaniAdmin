@using TangentIdeas.CeviriDukkani.Core.Dto.Common
@model TangentIdeas.CeviriDukkani.Core.Dto.Sale.CustomerDto
@{
    ViewBag.Title = "Müşteri Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<link href="~/Areas/Admin/css/validate.css" rel="stylesheet" />
@section breadcrumbs{
    <div id="breadcrumbs-wrapper">
        <!-- Search for small screen -->
        <div class="header-search-wrapper grey hide-on-large-only">
            <i class="mdi-action-search active"></i>
            <input type="text" name="Search" class="header-search-input z-depth-2" placeholder="Explore Materialize">
        </div>
        <div class="container">
            <div class="row">
                <div class="col s12 m12 l12">
                    <h5 class="breadcrumbs-title">Müşteri Düzenle</h5>
                    <ol class="breadcrumbs">
                        <li>
                            <a href="/Admin/Home">Anasayfa</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index")">Müşteri Listesi</a>
                        </li>
                        <li class="active">Müşteri Düzenle</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
}
<div class="section">
    <p class="caption">Müşteri düzenlemek için kullanılır.</p>
    <div class="divider"></div>
    <div id="basic-form" class="section">
        <div class="row">
            <div class="col s12 m12 l12">
                <div class="card-panel">
                    <h4 class="header2">Müşteri Düzenle</h4>
                    <div class="row">
                        <form class="formValidate" id="formValidate">
                            <div class="row">
                                <div class="input-field col s12">
                                    <label for="Name">Adı*</label>
                                    @*<input id="txtName" name="name" type="text" data-error=".errorTxt1">*@
                                    @Html.TextBoxFor(m => m.Name, new { id = "txtName", type = "text", data_error = ".errorTxt1" })
                                    <div class="errorTxt1"></div>
                                </div>
                                <div class="input-field col s12">
                                    <label for="SurName">Soyadı*</label>
                                    @Html.TextBoxFor(m => m.Surname, new { id = "txtSurname", type = "text", data_error = ".errorTxt2" })
                                    @*<input id="txtSurname" name="surname" type="text" data-error=".errorTxt2">*@
                                    <div class="errorTxt2"></div>
                                </div>
                                <div class="input-field col s12">
                                    <label for="Email">E-Mail *</label>
                                    @*<input id="txtEmail" type="email" name="email" data-error=".errorTxt3">*@
                                    @Html.TextBoxFor(m => m.Email, new { id = "txtEmail", type = "email", data_error = ".errorTxt3" })
                                    <div class="errorTxt3"></div>
                                </div>
                                <div class="input-field col s12">
                                    <label for="MobilePhone">Cep Telefonu</label>
                                    @Html.TextBoxFor(m => m.MobilePhone, new { id = "txtMobilePhone", type = "text" })
                                    @*<input id="txtMobilePhone" type="text" name="mobile-phone">*@
                                </div>

                                <div class="input-field col s12">
                                    <label for="password">Şifre *</label>
                                    @Html.TextBoxFor(m => m.Password, new { id = "txtPassword", type = "text", data_error = ".errorTxt4" })
                                    @*<input id="txtPassword" type="text" name="password" data-error=".errorTxt4">*@
                                    <div class="errorTxt4"></div>
                                </div>
                                <div class="col s12">
                                    <label for="role">Kullanıcı Tipi *</label>
                                    @Html.DropDownListFor(m => m.MembershipTypeId, new List<SelectListItem>
                                    {
                                        new SelectListItem { Text = "Bireysel", Value = "1" },
                                        new SelectListItem { Text = "Kurumsal", Value = "2" }
                                    }, new { id = "ddlRole", @class = "error browser-default", data_error = ".errorTxt6" })
                                    <div class="input-field"><div class="errorTxt6"></div></div>
                                </div>
                                <div class="col s12">
                                    <label for="role">Şirket *</label>
                                    @{
                                        var companies = new List<SelectListItem> { new SelectListItem { Value = "", Text = "Lütfen Seçiniz." } };
                                        foreach (var item in (List<CompanyDto>)ViewBag.Companies)
                                        {
                                            companies.Add(new SelectListItem { Value = item.Id.ToString(), Text = item.Name });
                                        }
                                    }

                                    @Html.DropDownListFor(m => m.CompanyId, companies, new { id = "ddlCompanies", @class = "error browser-default", data_error = ".errorTxt7" })
                                    <div class="input-field"><div class="errorTxt7"></div></div>
                                </div>
                                @*<div class="input-field col s12" id="dvInstCode" style="@(!Model.CompanyId.HasValue ? "display: none;":"")">
                                    <label for="institutionCode">Şirket Kodu*</label>
                                    @Html.TextBoxFor(m => m.InstitutionCode, new { id = "txtInstitutionCode", type = "text", data_error = ".errorTxt8" })
                                    <div class="errorTxt8"></div>
                                </div>*@
                                <div class="input-field col s12">
                                    @Html.HiddenFor(m => m.Id, new { id = "hdnCustomerId" })
                                    <button id="btnSave" class="btn waves-effect waves-light right submit" type="button">
                                        Kaydet
                                        <i class="mdi-content-send right"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>
@section scripts{
    <script data-main="/Areas/Admin/Scripts/app/page-scripts/customer/edit.page.js" src="~/Scripts/require.js"></script>
}

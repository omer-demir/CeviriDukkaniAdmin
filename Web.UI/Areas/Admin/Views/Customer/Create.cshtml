@using Tangent.CeviriDukkani.Domain.Dto.Common
@using Resources;

@{
    ViewBag.Title = CDResource.MusteriEkle;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<link href="~/Areas/Admin/css/validate.css" rel="stylesheet" />
@section breadcrumbs{
    <div id="breadcrumbs-wrapper">
        <!-- Search for small screen -->
        <div class="header-search-wrapper grey hide-on-large-only">
            <i class="mdi-action-search active"></i>
            <input type="text" name="Search" class="header-search-input z-depth-2" placeholder="Explore Materialize">
        </div>
        <div class="container">
            <div class="row">
                <div class="col s12 m12 l12">
                    <h5 class="breadcrumbs-title">@CDResource.MusteriEkle</h5>
                    <ol class="breadcrumbs">
                        <li>
                            <a href="/Admin/Home">@CDResource.Anasayfa</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index")">@CDResource.MusteriListesi</a>
                        </li>
                        <li class="active">@CDResource.MusteriEkle</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
}
<div class="section">
    <p class="caption">@CDResource.MusteriEklemekIcinKullanilir</p>
    <div class="divider"></div>
    <div id="basic-form" class="section">
        <div class="row">
            <div class="col s12 m12 l12">
                <div class="card-panel">
                    <h4 class="header2">@CDResource.MusteriEkle</h4>
                    <div class="row">
                        <form class="formValidate" id="formValidate">
                            <div class="row">
                                <div class="input-field col s12">
                                    <label for="name">@CDResource.Adi *</label>
                                    <input id="txtName" name="name" type="text" data-error=".errorTxt1">
                                    <div class="errorTxt1"></div>
                                </div>
                                <div class="input-field col s12">
                                    <label for="surname">@CDResource.Soyadi *</label>
                                    <input id="txtSurname" name="surname" type="text" data-error=".errorTxt2">
                                    <div class="errorTxt2"></div>
                                </div>
                                <div class="input-field col s12">
                                    <label for="email">@CDResource.EMail *</label>
                                    <input id="txtEmail" type="email" name="email" data-error=".errorTxt3">
                                    <div class="errorTxt3"></div>
                                </div>
                                <div class="input-field col s12">
                                    <label for="mobile-phone">@CDResource.CepTelefonu</label>
                                    <input id="txtMobilePhone" type="text" name="mobile-phone">
                                </div>
                                
                                <div class="input-field col s12">
                                    <label for="password">@CDResource.Sifre *</label>
                                    <input id="txtPassword" type="text" name="password" data-error=".errorTxt4">
                                    <div class="errorTxt4"></div>
                                </div>
                                <div class="col s12">
                                    <label for="role">@CDResource.MusteriTipi *</label>
                                    <select class="error browser-default" id="ddlRole" name="role" data-error=".errorTxt6">
                                        <option value="" disabled selected>@CDResource.LutfenSeciniz</option>
                                        <option value="1">@CDResource.Bireysel</option>
                                        <option value="2">@CDResource.Kurumsal</option>
                                    </select>
                                    <div class="input-field">
                                        <div class="errorTxt6"></div>
                                    </div>
                                </div>
                                <div class="col s12">
                                    <label for="role">@CDResource.Sirket</label>
                                    <select class="error browser-default" id="ddlCompanies" name="role">
                                        <option value="">@CDResource.LutfenSeciniz</option>
                                        @{
                                            foreach (var item in (List<CompanyDto>) ViewBag.Companies)
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="input-field col s12">
                                    <button id="btnSave" class="btn waves-effect waves-light right submit" type="button">
                                        @CDResource.Kaydet
                                        <i class="mdi-content-send right"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>
@section scripts{
    <script data-main="/Areas/Admin/Scripts/app/page-scripts/customer/create.page.js" src="~/Scripts/require.js"></script>
}